{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "importHelpers": true,
    "noEmit": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.d.ts", "./**/*.ts"],
  "exclude": ["node_modules"]
}
